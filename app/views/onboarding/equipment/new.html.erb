<div class="w-full max-w-[430px] sm:max-w-sm md:max-w-md lg:max-w-lg xl:max-w-xl 2xl:max-w-2xl mx-auto bg-fp-body-bg flex flex-col min-h-screen shadow-xl p-6">
  <header class="pt-10 pb-6">
    <%= link_to new_onboarding_allergy_path, class: "text-fp-accent-blue hover:text-fp-accent-blue-dark inline-flex items-center" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd" />
      </svg>
      Back
    <% end %>
    <h1 class="font-display text-3xl text-fp-neutral-darkest text-shadow-dark text-center mt-4">Your Kitchen Tools</h1>
  </header>

  <%= form_with scope: :onboarding_profile, model: @profile, url: onboarding_equipment_path, method: :post, local: true, class: "flex-grow space-y-6 overflow-y-auto" do |f| %>
    <p class="text-fp-neutral-text text-center text-sm">Knowing what you have helps us suggest suitable recipes.</p>

    <div class="space-y-4">
      <% equipment_options = [
        ["Instapot / Pressure Cooker", "instapot"],
        ["Blender", "blender"],
        ["Food Processor", "food_processor"],
        ["Strainer / Colander", "strainer"],
        ["Juicer", "juicer"],
        ["Oven", "oven"],
        ["Microwave", "microwave"],
        ["Air Fryer", "air_fryer"]
      ] %>

      <% equipment_options.each do |label, value| %>
        <label class="flex items-center p-3 bg-fp-white rounded-fp border border-fp-neutral-medium hover:border-fp-primary-green has-[:checked]:border-fp-primary-green has-[:checked]:ring-1 has-[:checked]:ring-fp-primary-green">
          <%= f.check_box :equipment,
            { multiple: true, class: "form-checkbox-custom mr-3" },
            value,
            nil
          %>
          <span class="text-sm text-fp-neutral-darkest"><%= label %></span>
        </label>
      <% end %>
    </div>

    <footer class="pt-8 pb-6">
      <%= f.submit "Next", class: "w-full text-center block font-semibold py-3 px-6 rounded-fp bg-fp-primary-green text-fp-white shadow-fp-cta hover:bg-fp-primary-green-dark" %>
    </footer>
  <% end %>
</div>
