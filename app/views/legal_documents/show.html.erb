<div class="w-full max-w-[430px] sm:max-w-sm md:max-w-md lg:max-w-lg xl:max-w-xl 2xl:max-w-2xl mx-auto bg-fp-body-bg flex flex-col min-h-screen shadow-xl p-6">
  <header class="pt-10 pb-6">
    <%= link_to :back, class: "text-fp-accent-blue hover:text-fp-accent-blue-dark inline-flex items-center" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd" />
      </svg>
      Back
    <% end %>
    <h1 class="font-display text-3xl text-fp-neutral-darkest text-shadow-dark text-center mt-4"><%= @document.title %></h1>
    <p class="text-fp-neutral-text text-sm text-center mt-2">Version <%= @document.version %></p>
  </header>

  <main class="flex-grow space-y-5 overflow-y-auto text-sm text-fp-neutral-text">
    <div class="prose prose-sm max-w-none">
      <%= @document.content %>
    </div>
  </main>
</div>
