<div class="w-full max-w-[430px] sm:max-w-sm md:max-w-md lg:max-w-lg xl:max-w-xl 2xl:max-w-2xl mx-auto bg-fp-body-bg flex flex-col min-h-screen shadow-xl p-6">
  <header class="pt-12 pb-8 text-center">
    <h1 class="font-display text-3xl text-fp-neutral-darkest text-shadow-dark">Your Profile</h1>
    <p class="text-fp-neutral-text text-sm mt-2">Tell us about yourself</p>
  </header>

  <main class="flex-grow space-y-5 overflow-y-auto">
    <%= form_with model: @profile, url: onboarding_profile_info_path, method: :patch, class: "space-y-4" do |form| %>
      <div class="bg-white p-4 rounded-fp shadow-sm space-y-4">
        <div>
          <%= form.label :age, class: "block text-sm font-medium text-fp-neutral-darkest mb-1" %>
          <%= form.number_field :age, class: "w-full rounded-fp border-fp-neutral-light focus:border-fp-primary-green focus:ring focus:ring-fp-primary-green focus:ring-opacity-50" %>
        </div>

        <div>
          <%= form.label :sex, class: "block text-sm font-medium text-fp-neutral-darkest mb-1" %>
          <%= form.select :sex,
              [["Male", "male"], ["Female", "female"], ["Other", "other"]],
              { include_blank: "Select..." },
              class: "w-full rounded-fp border-fp-neutral-light focus:border-fp-primary-green focus:ring focus:ring-fp-primary-green focus:ring-opacity-50" %>
        </div>

        <div>
          <%= form.label :height, "Height (cm)", class: "block text-sm font-medium text-fp-neutral-darkest mb-1" %>
          <%= form.number_field :height, step: 0.1, class: "w-full rounded-fp border-fp-neutral-light focus:border-fp-primary-green focus:ring focus:ring-fp-primary-green focus:ring-opacity-50" %>
        </div>

        <div>
          <%= form.label :weight, "Weight (kg)", class: "block text-sm font-medium text-fp-neutral-darkest mb-1" %>
          <%= form.number_field :weight, step: 0.1, class: "w-full rounded-fp border-fp-neutral-light focus:border-fp-primary-green focus:ring focus:ring-fp-primary-green focus:ring-opacity-50" %>
        </div>

        <div>
          <%= form.label :activity_level, class: "block text-sm font-medium text-fp-neutral-darkest mb-1" %>
          <%= form.select :activity_level,
              [
                ["Sedentary (little or no exercise)", "sedentary"],
                ["Lightly active (light exercise 1-3 days/week)", "lightly_active"],
                ["Moderately active (moderate exercise 3-5 days/week)", "moderately_active"],
                ["Very active (hard exercise 6-7 days/week)", "very_active"],
                ["Extra active (very hard exercise & physical job)", "extra_active"]
              ],
              { include_blank: "Select..." },
              class: "w-full rounded-fp border-fp-neutral-light focus:border-fp-primary-green focus:ring focus:ring-fp-primary-green focus:ring-opacity-50" %>
        </div>

        <div>
          <%= form.label :pregnancy_status, class: "block text-sm font-medium text-fp-neutral-darkest mb-1" %>
          <%= form.select :pregnancy_status,
              [
                ["Not pregnant", "not_pregnant"],
                ["First trimester", "first_trimester"],
                ["Second trimester", "second_trimester"],
                ["Third trimester", "third_trimester"]
              ],
              { include_blank: "Select..." },
              class: "w-full rounded-fp border-fp-neutral-light focus:border-fp-primary-green focus:ring focus:ring-fp-primary-green focus:ring-opacity-50" %>
        </div>

        <div>
          <%= form.label :lactation_status, class: "block text-sm font-medium text-fp-neutral-darkest mb-1" %>
          <%= form.select :lactation_status,
              [
                ["Not lactating", "not_lactating"],
                ["Exclusively breastfeeding", "exclusive_breastfeeding"],
                ["Mixed feeding", "mixed_feeding"]
              ],
              { include_blank: "Select..." },
              class: "w-full rounded-fp border-fp-neutral-light focus:border-fp-primary-green focus:ring focus:ring-fp-primary-green focus:ring-opacity-50" %>
        </div>
      </div>

      <div class="flex space-x-4">
        <%= button_to "Back", back_onboarding_profile_info_path, method: :get, class: "flex-1 text-center block font-semibold py-3 px-6 rounded-fp bg-fp-neutral-light text-fp-neutral-darkest shadow-sm hover:bg-fp-neutral-light-dark" %>
        <%= form.submit "Next", class: "flex-1 text-center block font-semibold py-3 px-6 rounded-fp bg-fp-primary-green text-fp-white shadow-fp-cta hover:bg-fp-primary-green-dark" %>
      </div>
    <% end %>
  </main>
</div>
